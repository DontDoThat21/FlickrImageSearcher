<Window x:Name="windowMain" x:Class="PhotoSearcherFlickrAPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoSearcherFlickrAPI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <WrapPanel Orientation="Horizontal" Margin="10" x:Name="ImagesWrapPanel"/>
        </ScrollViewer>

        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="2">
            <TextBox x:Name="SearchTextBox" Width="300" Height="30" Margin="0,0,10,0"/>
            <Button Content="Search" Width="100" Height="30" Click="SearchButton_Click"/>
            <Button Content="Clear" Width="100" Height="30" Click="ClearButton_Click"/>

        </StackPanel>
        
    </Grid>
</Window>
